mmmmxhe#include <iostream>
#include <stdlib.h> 
#include <array>




void random_array(double* array, int size, int scale){


	for ( int i=0;i<size; i++){

		array[i]= array[i]*scale;
	}

	
}

double sum(double* array, int size){

	double sum(0.00);

	for ( int i=0;i<size; i++){

		sum+=array[i];
	}
	return sum;

}

double get_random(){

	return (double) rand()/RAND_MAX;
}

